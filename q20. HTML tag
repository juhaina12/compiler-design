%{
#include <stdio.h>
%}

%%
<!--(.|\n)*?-->     { /* Ignore HTML comments */ }
<[^>]+>             { printf("HTML tag: %s\n", yytext); }
.|\n                { /* Ignore other characters */ }
%%

int main(int argc, char **argv) {
    if (argc > 1) {
        FILE *file = fopen(argv[1], "r");
        if (!file) {
            fprintf(stderr, "Cannot open file %s\n", argv[1]);
            return 1;
        }
        yyin = file;
    }

    yylex();

    if (argc > 1) {
        fclose(yyin);
    }

    return 0;
}

int yywrap() {
    return 1;
}
