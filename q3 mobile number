C PRO:
#include <stdio.h>
#include <string.h>
#include <ctype.h>

int isValidMobileNumber(const char* number) {
    // Check if the length is exactly 10
    if (strlen(number) != 10) {
        return 0;
    }
    
    // Check if all characters are digits
    for (int i = 0; i < 10; i++) {
        if (!isdigit(number[i])) {
            return 0;
        }
    }

    return 1;
}

int main() {
    char mobileNumber[20];
    printf("Enter the mobile number: ");
    scanf("%s", mobileNumber);

    if (isValidMobileNumber(mobileNumber)) {
        printf("The mobile number is valid.\n");
    } else {
        printf("The mobile number is not valid.\n");
    }

    return 0;
}
