%{
#include <stdio.h>
int line_num = 1;
%}

%%
\n              { printf("%d: \n", line_num++); }
.|\t            { ECHO; }

%%

int main(int argc, char **argv) {
    if (argc > 1) {
        FILE *file = fopen(argv[1], "r");
        if (!file) {
            perror("Failed to open file");
            return 1;
        }
        yyin = file;
    }
    yylex();
    return 0;
}
