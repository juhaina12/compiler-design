NUM    [0-9]+
OP     [\+\-\*/]
WS     [ \t\n]+

%%
{NUM}  {
          yylval = atoi(yytext); // Convert string to integer
          return NUMBER;
       }
{OP}   {
          return yytext[0]; // Return the operator
       }
{WS}   {
          // Ignore whitespace
       }
.      {
          yyerror("Invalid character");
       }
